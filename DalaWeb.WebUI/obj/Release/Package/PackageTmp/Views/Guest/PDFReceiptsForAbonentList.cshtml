@model IEnumerable<DalaWeb.Domain.Entities.PDFStorages.PDFAbonentMonthlyReceipt>

@{
    ViewBag.Title = "Список счетов пользователя";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
    int i = 1;
}

@if (Model.Any())
{
    <div class="container">
        <div class="row">
            <div class="span12">
                <h3 class="text-center">
                    Список счетов пользователя @Model.First().Abonent.Name (@Model.First().Abonent.AbonentNumber)
                </h3>
                <address>
                    <strong>Адрес:</strong><br />
                    Город: @Model.First().Abonent.Address.City.Name<br />
                    Улица: @Model.First().Abonent.Address.Street.Name<br />
                    Дом: @Model.First().Abonent.Address.House<br />
                    <abbr title="Phone">Телефон:</abbr> @Model.First().Abonent.Telephone
                </address>

                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Дата
                            </th>
                            <th>
                                Файл
                            </th>
                            <th>
                                Статус
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @i.ToString()
                                </td>
                                <td>
                                    Счет за @item.Date.ToString("MMMM yyyy")
                                </td>
                                <td>
                                    <a class="btn" title="PDF" href="@Url.Action("GetPDF", new { PDFId = item.PDFId })">
                                        <span class="icon-download"></span>
                                    </a>
                                </td>
                                <td>
                                    @if (item.Date.AddMonths(1) > DateTime.Now)
                                    {
                                        <i>Актуальный</i>
                                    }
                                    else
                                    {
                                        <i>Прошедший</i>
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    string message = string.Concat("Для пользователя с ИНН ",(string)Session["INN"], " не обнаружено счетов");
    <h2>@message</h2>
}
<div>
    @Html.ActionLink("Вернуться", "Index")
</div>