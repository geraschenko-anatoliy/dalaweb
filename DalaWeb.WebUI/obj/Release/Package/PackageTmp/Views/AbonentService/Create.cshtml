@model DalaWeb.Domain.Entities.Services.AbonentService

@{
    ViewBag.Title = "Сервисы абонента";
}
<script type="text/javascript">
    var addressGetServicesPath = "@Url.Action("GetServices", "AbonentService")";
</script>

<script src="~/Scripts/DropDownHelpers/ServiceDropdown.js"></script>

<h2>Создать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <legend>Сервис для @ViewBag.AbonentName</legend>
        @Html.Hidden("Abonent.AbonentId", (int)@ViewBag.AbonentId)
@*        @Html.Hidden("Abonent.Name")*@
        @Html.Hidden("Abonent.NumberOfInhabitants")
        @Html.Hidden("Abonent.INN")
        @Html.Hidden("isOff", false)

        <div class="editor-label">
            @Html.LabelFor(model => model.Service.ServiceCompany.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ServiceCompanyId", string.Empty)
            @Html.ValidationMessageFor(model => model.Service.ServiceCompanyId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Service.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Service.ServiceId", new SelectList(string.Empty, "Value", "Text"))
            @Html.ValidationMessageFor(model => model.Service.ServiceId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
        <p>
            <input type="submit" class="btn" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

