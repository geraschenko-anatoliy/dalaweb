@model IEnumerable<DalaWeb.Domain.Entities.Services.AbonentService>

@{
    ViewBag.Title = "Сервисы абонента";
}

<h2>
    Предоставляемые услуги
    <a class="btn" title="К отключенным" href="@Url.Action("Archive")">
        <span class="icon-trash"></span>
    </a>
</h2>
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Сервис компания
                </th>
                <th>
                    Сервис
                </th>
                <th>
                    Дата подключения
                </th>
                <th>
                    Цена
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abonent.AbonentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abonent.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServiceCompany.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Price)
                    </td>
                    <td>
                        <a class="btn" title="Детальнее" href="@Url.Action("Details", new { abonentId = item.AbonentId, serviceId = item.ServiceId, startDate = item.StartDate })">
                            <span class="icon-info-sign"></span>
                        </a>
                        <a class="btn" title="Отключить" href="@Url.Action("Edit", new { abonentId = item.AbonentId, serviceId = item.ServiceId, startDate = item.StartDate })">
                            <span class="icon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        Список абонентских услуг пуст
    </p>
}

