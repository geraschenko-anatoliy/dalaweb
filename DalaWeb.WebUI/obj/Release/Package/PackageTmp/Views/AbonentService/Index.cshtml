@model IEnumerable<DalaWeb.Domain.Entities.Services.AbonentService>

@{
    ViewBag.Title = "Сервисы абонента";
}

<h2>
    Предоставляемые услуги
    <a class="btn" title="К отключенным" href="@Url.Action("Archive")">
        <span class="icon-trash"></span>
    </a>
</h2>
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Abonent.AbonentNumber)
                    @*Номер*@
                </th>
                <th>
                    @*Имя*@
                    @Html.DisplayNameFor(model => model.Abonent.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.ServiceCompany.Name)
                    @*Сервис компания*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Name)
                
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                    @*Дата подключения*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Service.ServicePrice.FirstOrDefault().Price)
                    @*Цена*@
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abonent.AbonentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abonent.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServiceCompany.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServicePrice.OrderBy(x => x.StartDate).Last().Price)
                    </td>
                    <td>
                        <a class="btn" title="Детальнее" href="@Url.Action("Details", new { abonentServiceId = item.AbonentServiceId })">
                            <span class="icon-info-sign"></span>
                        </a>
                        <a class="btn" title="Отключить" href="@Url.Action("Edit", new { abonentServiceId = item.AbonentServiceId })">
                            <span class="icon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        Список абонентских услуг пуст
    </p>
}

