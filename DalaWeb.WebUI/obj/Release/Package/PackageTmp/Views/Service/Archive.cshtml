@model IEnumerable<DalaWeb.Domain.Entities.Services.Service>

@{
    ViewBag.Title = "Сервисы";
}

<h2>Архив</h2>
@if (Model.Any())
{
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceCompany.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServicePrice.FirstOrDefault().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCompany.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice.OrderBy(x=>x.StartDate).Last().Price)
            </td>
            <td>
                @item.ToString()
            </td>
            <td>
                <a class="btn" href="@Url.Action("Details", new { id = item.ServiceId })">Детальнее</a>
            </td>
        </tr>
    }
</table>
}
else
{
    <p>
        Список архивных сервисов пуст
    </p>
}
