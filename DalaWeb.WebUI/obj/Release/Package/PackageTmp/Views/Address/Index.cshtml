@model DalaWeb.WebUI.ViewModels.AdressIndexViewModel
@{
    ViewBag.Title = "Главная";
}

<h2>Адреса</h2>

<p>
    @Html.ActionLink("Создать город", "Create", "City")
    @Html.ActionLink("Создать улицу", "Create", "Street")
</p>

<table>
    <tr>
        <th>
            Абонент
        </th>
        <th>
            Город
        </th>
        <th>
            Улица
        </th>
        <th>
            Дом
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.addresses)
    {
        <tr>
            <td>
                @item.Abonent.Name
            </td>
            <td>
                @Model.cities.Where(x => x.CityId == item.CityId).Select(x => x.Name).FirstOrDefault()
            </td>
            <td>
                @Model.streets.Where(x => x.StreetId == item.StreetId).Select(x => x.Name).FirstOrDefault()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.House)
            </td>
            <td>
                @*<div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Функции
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit", new { id = item.AbonentId })">Редактировать</a></li>
                            <li><a href="@Url.Action("Details", new { id = item.AbonentId })">Детальнее</a></li>
                            <li><a href="@Url.Action("Delete", new { id = item.AbonentId })">Удалить</a></li>
                        </ul>
                    </div>*@
            </td>
        </tr>
    }

</table>
