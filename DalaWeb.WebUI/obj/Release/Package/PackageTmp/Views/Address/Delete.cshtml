@model DalaWeb.Domain.Entities.Address

@{
    ViewBag.Title = "Адреса. Удаление";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить адрес?</h3>
<fieldset>
    <legend>Адрес</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.CityId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CityId)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.StreetId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StreetId)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.House)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.House)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Вернуться", "Index")
    </p>
}
