@model DalaWeb.Domain.Entities.Counters.Stamp

@{
    ViewBag.Title = "Пломбы";
}

<h2>Отключение</h2>

<h3>Вы действительно хотите отключить пломбу @Model.Name?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.CounterId)
    @Html.HiddenFor(model => model.StampId)
    @Html.HiddenFor(model => model.StartDate)
    @Html.HiddenFor(model => model.Name)
    @Html.Hidden("isOff", true)
    
    <fieldset>
    <legend>Пломба</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Counter.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Counter.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.StartDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StartDate)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.FinishDate)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.FinishDate)
        @Html.ValidationMessageFor(model => model.FinishDate)
    </div>

</fieldset>

    <p>
        <input type="submit" value="Отключить" /> |
        @Html.ActionLink("Вернуться", "Index")
    </p>
}
