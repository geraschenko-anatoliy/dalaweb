@model DalaWeb.Domain.Entities.Counters.Counter

@{
    ViewBag.Title = "Счетчики";
}

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CounterId)
    @Html.HiddenFor(model => model.AbonentId)
    @Html.HiddenFor(model => model.ServiceId)
    @Html.HiddenFor(model => model.Name)
    <table class="table table-hover">
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.Name, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AbonentId)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.AbonentId, (SelectList)ViewBag.Abonents, new { disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.AbonentId)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ServiceId)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.ServiceId, (SelectList)ViewBag.Services, new { disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ServiceId)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.InitialValue)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.InitialValue, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.InitialValue)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.StartDate)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.StartDate)
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    Пломба
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @if (Model.Stamps.Where(x => x.isOff == false).Count() == 0)
                    {
                        @Html.ActionLink("Добавить пломбу", "Create", "Stamp", new { counterId = Model.CounterId }, null)
                    }
                    else
                    {
                        DalaWeb.Domain.Entities.Counters.Stamp item = Model.Stamps.Where(x => x.isOff == false).LastOrDefault();
                        @Html.ActionLink(item.Name, "Details", "Stamp", new { id = item.StampId }, null)
                        
                        <a class="btn" title="Редактировать" href="@Url.Action("Edit", "Stamp" , new { id = item.StampId })">
                            <span class="icon-edit"></span>
                        </a>
                        <a class="btn" title="Детальнее" href="@Url.Action("Details", "Stamp", new { id = item.StampId })">
                            <span class="icon-info-sign"></span>
                        </a>
                        <a class="btn" title="Отключить" href="@Url.Action("Delete", "Stamp", new { id = item.StampId })">
                            <span class="icon-remove"></span>
                        </a>
                    }
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <p>
                    <input type="submit" class="btn" value="Сохранить" />
                </p>
            </td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>