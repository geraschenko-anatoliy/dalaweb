@model System.DateTime?

<div class="editor-field">
    @Html.TextBox("", String.Format("{0:mm/dd/yyyy}", (Model == DateTime.MinValue) ? null : Model), new { @class = "datepicker" })
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#@ViewData.ModelMetadata.PropertyName").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'yyyy/mm/dd',
            gotoCurrent: true,
            format: 'yyyy/mm/dd'
        });
    });
