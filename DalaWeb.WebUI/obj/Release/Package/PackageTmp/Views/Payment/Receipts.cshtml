@model DalaWeb.WebUI.ViewModels.ForPayment.IndexViewModel

@{
    ViewBag.Title = "Квитанции";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2 class="text-center">
    Главная
    <a class="btn" title="Открыть месяц" href="@Url.Action("OpenMonth")">
        <span class="icon-plus"></span>
    </a> 
</h2>

@using (Ajax.BeginForm("ReceiptFilter", null, new AjaxOptions() { UpdateTargetId = "months" }, new { id = "ajaxform"}))
{
    <table align="center">
        <tr class="text-center">
            <td>
                По номеру
            </td>
            <td>
                По году
            </td>
            <td>
                По месяцу
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                @Html.DropDownList("AbonentNumber", (SelectList)ViewBag.AbonentNumber)
            </td>
            <td>
                @Html.DropDownList("Year", (SelectList)ViewBag.Year)
            </td>
            <td>
                @Html.DropDownList("Month", (SelectList)ViewBag.Month)
            </td>
            <td valign="top">
                <input type="submit" class="btn" value="Фильтр" />
            </td>
        </tr>
    </table>
}
<div id="months">
    <h3 class="text-center">
        Настройте фильтр для отображения квитанций
    </h3>
</div>
