@model IQueryable<DalaWeb.Domain.Entities.Payments.Payment>


@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Abonent.AbonentNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date.Day)
        </td>
        <td>
            @item.Date.ToString("MMMM")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            <a class="btn" title="Детальнее" href="@Url.Action("Details", new { id = item.PaymentId })">
                <span class="icon-info-sign"></span>
            </a>
            <a class="btn" title="Удалить" href="@Url.Action("Delete", new { id = item.PaymentId })">
                <span class="icon-remove"></span>
            </a>
        </td>
    </tr>
}
