@model DalaWeb.Domain.Entities.Payments.Payment

@{
    ViewBag.Title = "Платежи. Создание";
}

<h2>Платеж</h2>

<script src="~/Scripts/AutocompleteHepler.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table class="table table-hover">
        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Abonent.AbonentNumber)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.TextBox("AbonentNumber")
                    @Html.ValidationMessageFor(model => model.Abonent.AbonentNumber)
                    @Html.ValidationMessage("AbonentNumber")
                </div>
            </td>
        </tr>
        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Date)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Date)
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </td>
        </tr>
        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Sum)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Sum)
                    @Html.ValidationMessageFor(model => model.Sum)
                </div>
            </td>
        </tr>

        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Comment)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Comment)
                    @Html.ValidationMessageFor(model => model.Comment)
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <p>
                    <input type="submit" class="btn" value="Создать" />
                </p>
            </td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#AbonentNumber").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Payment/AutoCompleteAbonentNumber",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.AbonentNumber, value: item.AbonentNumber };
                        }))
                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>
