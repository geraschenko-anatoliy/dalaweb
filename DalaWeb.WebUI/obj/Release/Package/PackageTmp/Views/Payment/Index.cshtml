@model IEnumerable<DalaWeb.Domain.Entities.Payments.Payment>

@{
    ViewBag.Title = "Платежи";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2>
    Главная
    <a class="btn" title="Создать платеж" href="@Url.Action("Create")">
        <span class="icon-plus"></span>
    </a> 
</h2>

@using (Ajax.BeginForm("Filter", new AjaxOptions() { UpdateTargetId = "infobody" }))
{
    <table class="text-center">
        <tr>
            <td>
                По номеру
            </td>
            <td>
                По году
            </td>
            <td>
                По месяцу
            </td>
            <td>
                По типу
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                @Html.DropDownList("AbonentNumber", (SelectList)ViewBag.AbonentNumber)
            </td>
            <td>
                @Html.DropDownList("Year", (SelectList)ViewBag.Year)
            </td>
            <td>
                @Html.DropDownList("Month", (SelectList)ViewBag.Month)
            </td>
            <td>
                @Html.DropDownList("PaymentType", (SelectList)ViewBag.PaymentType)
            </td>
            <td valign="top">
                <input type="submit" value="Фильтр" class="btn" />
            </td>
        </tr>
    </table>
}
<table class="table table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Abonent.AbonentNumber)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>
    <tbody id="infobody">
        @Html.Action("Filter")
    </tbody>
</table>

