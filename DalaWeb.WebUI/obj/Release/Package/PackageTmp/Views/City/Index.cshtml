@model IEnumerable<DalaWeb.Domain.Entities.City>

@{
    ViewBag.Title = "Города. Главная";
}

<h2>Главная</h2>

<p>
    @Html.ActionLink("Создать новый город", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.CityId }) |
            @Html.ActionLink("Детальнее", "Details", new { id=item.CityId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CityId })
        </td>
    </tr>
}
</table>
