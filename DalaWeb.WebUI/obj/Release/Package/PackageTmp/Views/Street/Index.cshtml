@model IEnumerable<DalaWeb.Domain.Entities.Street>

@{
    ViewBag.Title = "Улицы. Главная";
}

<h2>Главная</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.StreetId }) |
            @Html.ActionLink("Детальнее", "Details", new { id=item.StreetId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.StreetId })
        </td>
    </tr>
}

</table>
