@model DalaWeb.Domain.Entities.Services.AbonentService

@{
    ViewBag.Title = "Сервисы абонента";
}

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.AbonentId)
    @Html.HiddenFor(model => model.ServiceId)
    <table class="table table-hover">
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Service.Name)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.Service.Name)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.StartDate)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.StartDate)
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.FinishDate)
                </div>
            </td>
            <td>
                @if (!@Model.isOff)
                {
                    <span class="label label-info">Сервис подключен</span>
                }
                else
                {
                    <div class="editor-field">
                        <span class="label label-info">Сервис отключен</span>
                        @Html.DisplayFor(model => model.FinishDate)
                        @Html.ValidationMessageFor(model => model.FinishDate)
                    </div>
                }
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <p>
                    <input type="submit" class="btn" value="Сохранить" />
                </p>
            </td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#@ViewData.ModelMetadata.PropertyName").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'yyyy/MM/dd',
            format: 'yyyy/MM/dd'
        });
    });
</script>
}
