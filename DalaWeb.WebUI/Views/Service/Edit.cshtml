@model DalaWeb.Domain.Entities.Services.Service

@{
    ViewBag.Title = "Сервисы";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#FinishDate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'yyyy/MM/dd',
            format: 'yyyy/MM/dd',
            autoclose: true
        });
    });
</script>

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Сервис</legend>

        @Html.HiddenFor(model => model.ServiceId)
        @Html.HiddenFor(model => model.Archival)

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyId, "Сервис компания")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CompanyId", String.Empty)
            @Html.ValidationMessageFor(model => model.CompanyId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Type", string.Empty)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="display-label">
            Дата редактирования
        </div>

        <div class ="editor-field">
            <div class="editor-field">
                @Html.TextBox("FinishDate", String.Format("{0:yyyy/MM/dd}", DateTime.Now), new { @class = "datepicker" })
            </div>
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>


@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

