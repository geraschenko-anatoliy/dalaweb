@model DalaWeb.Domain.Entities.Services.Service

@{
    ViewBag.Title = "Создание";
}

<h2>Создать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Сервис</legend>
        @Html.Hidden("isOff", false)
        <div class="editor-label">
            @Html.LabelFor(model => model.ServiceCompany.ServiceCompanyId, "Сервис компания")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ServiceCompanyId", String.Empty)
            @Html.ValidationMessageFor(model => model.ServiceCompany.ServiceCompanyId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ServicePrice.FirstOrDefault().Price)
        </div>
        <div class="editor-field">
            @Html.Editor("Price")
            @Html.ValidationMessageFor(model => model.ServicePrice.FirstOrDefault().Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Type, (SelectList)ViewBag.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>