@model IEnumerable<DalaWeb.Domain.Entities.Services.Service>

@{
    ViewBag.Title = "Сервисы";
}

<h2>
    Главная
    <a class="btn"  title="Создать новый" href="@Url.Action("Create")">
        <span class="icon-plus"></span>
    </a>
    <a class="btn" title="К отключенным" href="@Url.Action("Archive")">
        <span class="icon-trash"></span>
    </a>
</h2>
@if (Model.Any())
{ 
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCompany.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ServicePrice.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceCompany.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicePrice.OrderBy(x=>x.StartDate).Last().Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
                <td>
                    <a class="btn" title="Редактировать" href="@Url.Action("Edit", new { id = item.ServiceId })">
                        <span class="icon-edit"></span>
                    </a>
                    <a class="btn" title="Детальнее" href="@Url.Action("Details", new { id = item.ServiceId })">
                        <span class="icon-info-sign"></span>
                    </a>
                    <a class="btn" title="Отключить" href="@Url.Action("Delete", new { id = item.ServiceId })">
                        <span class="icon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-center">
        Список сервисов пуст
    </p>
}