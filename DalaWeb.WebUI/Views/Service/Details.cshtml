@model DalaWeb.Domain.Entities.Services.Service

@{
    ViewBag.Title = "Сервисы";
}

<h2>Детальнее</h2>

<table class="table table-striped">
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.ServiceCompany.Name)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.ServiceCompany.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
                История цен
            </div>
        </td>
        <td>
            <table>
                <tr>
                    <th>
                        Дата
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServicePrice.FirstOrDefault().Price)
                    </th>
                </tr>
                @foreach(var item in Model.ServicePrice.OrderByDescending(x=>x.StartDate))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.StartDate) - @Html.DisplayFor(modelitem => item.FinishDate)
                            @*@item.StartDate.ToShortDateString() - @item.FinishDate.ToShortDateString()*@
                        </td>
                        <td>
                            @item.Price
                        </td>
                    </tr>
                }

            </table>
            @*<div class="display-field">
                @Html.DisplayFor(model => model.ServicePrice.OrderBy(x=>x.StartDate).Last().Price)
            </div>*@
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ServiceId }) |
    @Html.ActionLink("Вернуться", "Index")
</p>
