@model DalaWeb.Domain.Entities.Payments.Payment

@{
    ViewBag.Title = "Открыть месяц";
}
<h2>Открыть месяц</h2>

@using (Html.BeginForm())
{
        <p class="text-center">
    @Html.AntiForgeryToken()

        @Html.ValidationSummary(true)
    </p>

    
    if (!ViewBag.HasErrors)
    { 
    <table class="table table-striped">
        <tr>
            <td>
                Выбрать дату
            </td>
            <td>
                <div class="editor-field">
                    @Html.TextBox("date", String.Format("{0:MMMM-yyyy}", DateTime.Now), new { @class = "datepicker" })
                    @Html.ValidationMessage("date")
                </div>
            </td>
            </tr>
        <tr>
            <td></td>
            <td>
                <p>
                    <input type="submit" class="btn" value="Открыть" />
                </p>
            </td>
        </tr>
    </table>
    }
    else
    {
        <p class="text-center" > 
            @Html.ActionLink("Добавить платежи", "Create", "Payment") |
            @Html.ActionLink("Добавить адрес", "Index", "Abonent")
        </p> 
    }
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#date").datepicker({
            language: 'ru',
            changeMonth: true,
            changeYear: true,
            format: "MM yyyy",
            viewMode: "months",
            minViewMode: "months",
            autoclose: true
        });
    });
</script>