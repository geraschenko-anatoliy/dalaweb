    <table>
        <tr>
            <td>
                Выбрать дату
            </td>
            <td>
                <div class="editor-field">
                    @Html.TextBox("date", String.Format("{0:MM/yyyy}", DateTime.Now), new { @class = "datepicker" })
                    @Html.ValidationMessage("date")
                </div>
            </td>
