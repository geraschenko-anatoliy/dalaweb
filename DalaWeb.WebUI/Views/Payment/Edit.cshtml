@model DalaWeb.Domain.Entities.Payments.Payment

@{
    ViewBag.Title = "Платежи";
}

<h2>Редактирование</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Платеж</legend>

        @Html.HiddenFor(model => model.PaymentId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Abonent.AbonentId, "Abonent")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AbonentId", String.Empty)
            @Html.ValidationMessageFor(model => model.Abonent.AbonentId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sum)
            @Html.ValidationMessageFor(model => model.Sum)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" class="btn" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>