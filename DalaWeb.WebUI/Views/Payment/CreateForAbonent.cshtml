@model DalaWeb.Domain.Entities.Payments.Payment

@{
    ViewBag.Title = "Платежи. Создание";
}

<h2>Платеж для абонента @ViewBag.AbonentName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=> model.AbonentId)
    
    <table class="table table-hover">
        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Date)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Date)
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </td>
        </tr>
        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Sum)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Sum)
                    @Html.ValidationMessageFor(model => model.Sum)
                </div>
            </td>
        </tr>

        <tr>
            <th>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Comment)
                </div>
            </th>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Comment)
                    @Html.ValidationMessageFor(model => model.Comment)
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <p>
                    <input type="submit" class="btn" value="Создать" />
                </p>
            </td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

