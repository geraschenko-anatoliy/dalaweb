@model DalaWeb.Domain.Entities.Counters.Stamp

@{
    ViewBag.Title = "Пломбы";
}

<h2>Создание</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Пломбы</legend>

        @Html.Hidden("FinishDate", DateTime.MinValue)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CounterId, "Counter")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CounterId", (SelectList)ViewBag.Counters, new { disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.CounterId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
        <p>
            <input type="submit" class="btn" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>