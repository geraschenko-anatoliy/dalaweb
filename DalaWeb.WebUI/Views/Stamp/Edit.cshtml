@model DalaWeb.Domain.Entities.Counters.Stamp

@{
    ViewBag.Title = "Пломбы";
}

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Пломба</legend>

        @Html.HiddenFor(model => model.StampId)
        @Html.HiddenFor(model => model.CounterId)
        @Html.HiddenFor(model => model.FinishDate)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Counter.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("CounterId", (SelectList)ViewBag.Counters, new { disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Counter.CounterId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <p>
            <input type="submit" class="btn" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>