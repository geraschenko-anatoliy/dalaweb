@model IEnumerable<DalaWeb.Domain.Entities.Services.ServiceCompany>

@{
    ViewBag.Title = "Сервис компании";
}

<h2>
    Главная
    <a class="btn" title="Создать компанию" href="@Url.Action("Create")">
        <span class="icon-plus"></span>
    </a>
</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn" title="Редактировать" href="@Url.Action("Edit", new { id = item.CompanyId })">
                            <span class="icon-edit"></span>
                        </a>
                        <a class="btn" title="Детальнее" href="@Url.Action("Details", new { id = item.CompanyId })">
                            <span class="icon-info-sign"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">
        Список сервис компаний пуст
    </p>
}