{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CounterValues</legend>

        @Html.HiddenFor(model => model.CounterValuesId)

        @Html.HiddenFor(model => model.Date)

