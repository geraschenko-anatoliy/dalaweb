@model DalaWeb.WebUI.ViewModels.ForAbonent.IndexViewModel

@{
    ViewBag.Title = "Главная";
}

<h2>
    Абоненты
    <a class="btn" title="Создать абонента" href="@Url.Action("Create")" >
        <span class="icon-plus"></span>
    </a>
    <a class="btn" title="Просмотреть отключенных" href="@Url.Action("DeletedIndex")">
        <span class="icon-trash"></span>
    </a>
</h2>

@if (Model.abonents.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Имя
                </th>
                <th>
                    ИНН
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Число жителей
                </th>
                <th>
                    Город
                </th>
                <th>
                    Улица
                </th>
                <th>
                    Дом
                </th>
                <th>
                    Кредиты
                </th>
                <th>
                    Услуги
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.abonents)
            {
                <tr>
                    <td>
                        @if (item.Address == null)
                        {
                            <span class="label label-important">Добавьте адрес</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.AbonentNumber)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.INN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfInhabitants)
                    </td>
                    @if (item.Address != null)
                    {
                        <td>
                            @Model.cities.Where(x => x.CityId == item.Address.City.CityId).Select(x => x.Name).FirstOrDefault()
                        </td>
                        <td>
                            @Model.streets.Where(x => x.StreetId == item.Address.Street.StreetId).Select(x => x.Name).FirstOrDefault()
                        </td>
                        <td>
                            @item.Address.House
                        </td>
                    }
                    else
                    {
                        <td>
                            <i class="icon-warning-sign"></i>
                        </td>
                        <td>
                            <i class="icon-warning-sign"></i>
                        </td>
                        <td>
                            <i class="icon-warning-sign"></i>
                        </td>
                    }
                    <td>
                        @item.AbonentCredits.Where(x=>x.FullyPaid == false).Count().ToString()
                    </td>
                    <td>
                        @item.AbonentServices.Where(x=>x.isOff == false).Count().ToString()
                    </td>
                    <td>
                        <a class="btn" title="Редактировать" href="@Url.Action("Edit", new { id = item.AbonentId })">
                            <span class="icon-edit"></span>
                        </a>
                        <a class="btn" title="Детальнее" href="@Url.Action("Details", new { id = item.AbonentId })">
                            <span class="icon-info-sign"></span>
                        </a>
                        <a class="btn" title="Отключить" href="@Url.Action("Delete", new { id = item.AbonentId })">
                            <span class="icon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
