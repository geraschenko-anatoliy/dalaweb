@model DalaWeb.Domain.Entities.Abonents.Abonent

@{
    ViewBag.Title = "Детальнее";
}

<h2>Информация об абоненте @Model.Name</h2>

<table>
    <tr>
        <td>
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
        </td>
        <td>
            <div class="editor-field">
                @Html.Label(Model.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="editor-label">
                @Html.LabelFor(model => model.Telephone)
            </div>
        </td>
        <td>
            <div class="editor-field">
                @Html.Label(Model.Telephone)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="editor-label">
                @Html.LabelFor(model => model.INN)
            </div>
        </td>
        <td>
            <div class="editor-field">
                @Html.Label(Model.INN)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="editor-label">
                @Html.LabelFor(model => model.NumberOfInhabitants)
            </div>
        </td>
        <td>
            <div class="editor-field">
                @Html.Label(Model.NumberOfInhabitants.ToString())
            </div>
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.AbonentId }) |
    @Html.ActionLink("Вернуться", "Index")
</p>
