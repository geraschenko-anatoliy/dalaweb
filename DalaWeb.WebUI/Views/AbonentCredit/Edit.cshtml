@model DalaWeb.Domain.Entities.Credits.AbonentCredit

@{
    ViewBag.Title = "Редактирование";
}

<h3>Редактирование кредита "@Model.Credit.Name" абонента @Model.Abonent.Name </h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Кредит</legend>

        @Html.HiddenFor(model => model.AbonentId)

        @Html.HiddenFor(model => model.CreditId)

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FinishDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FinishDate)
            @Html.ValidationMessageFor(model => model.FinishDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrePayment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrePayment)
            @Html.ValidationMessageFor(model => model.PrePayment)
        </div>

        @Html.HiddenFor(model => model.PaidForTheEntirePeriod)


        <div class="editor-label">
            @Html.LabelFor(model => model.PaidMonths)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaidMonths)
            @Html.ValidationMessageFor(model => model.PaidMonths)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Term)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Term)
            @Html.ValidationMessageFor(model => model.Term)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        @Html.HiddenFor(model => model.PaymentForMonth)

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>
        <p>
            <input type="submit" value="Сохранить" class="btn" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("К списку кредитов", "Index")
    @Html.ActionLink("К абоненту", "Edit", "Abonent", new { id = Model.AbonentId }, null)
</div>
