@model DalaWeb.Domain.Entities.AbonentCredit

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование кредита "@Model.Credit.Name" абонента @Model.Abonent.Name </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AbonentCredit</legend>

        @Html.HiddenFor(model => model.AbonentID)

        @Html.HiddenFor(model => model.CreditID)

        <div class="editor-label">
            @Html.LabelFor(model => model.DateWhereCreated)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateWhereCreated)
            @Html.ValidationMessageFor(model => model.DateWhereCreated)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrePayment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrePayment)
            @Html.ValidationMessageFor(model => model.PrePayment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PaidForTheEntirePeriod)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaidForTheEntirePeriod)
            @Html.ValidationMessageFor(model => model.PaidForTheEntirePeriod)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PaidMonths)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaidMonths)
            @Html.ValidationMessageFor(model => model.PaidMonths)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Term)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Term)
            @Html.ValidationMessageFor(model => model.Term)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PaymentForMonth)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaymentForMonth)
            @Html.ValidationMessageFor(model => model.PaymentForMonth)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("К списку кредитов", "Index")
    @Html.ActionLink("К абоненту","Edit", "Abonent", new { id = Model.AbonentID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
