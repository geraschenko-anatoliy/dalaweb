@model DalaWeb.WebUI.ViewModels.ForAddress.AdressIndexViewModel
@{
    ViewBag.Title = "Главная";
}

<h2>
    Адреса
    <a class="btn" title="Создать город"  href="@Url.Action("Create", "City")">
        <span class="icon-plus"></span>
    </a>
    <a class="btn" title="Создать улицу" href="@Url.Action("DeletedIndex", "Street")">
        <span class="icon-plus"></span>
    </a>
</h2>

@if (Model.addresses.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Абонент
                </th>
                <th>
                    Город
                </th>
                <th>
                    Улица
                </th>
                <th>
                    Дом
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.addresses)
            {
                <tr>
                    <td>
                        @item.Abonent.Name
                    </td>
                    <td>
                        @item.City.Name
@*                        @Model.cities.Where(x => x.CityId == item.).Select(x => x.Name).FirstOrDefault()*@
                    </td>
                    <td>
                        @item.Street.Name
@*                        @Model.streets.Where(x => x.StreetId == item.StreetId).Select(x => x.Name).FirstOrDefault()*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.House)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        Список адресов пуст
    </p>
}