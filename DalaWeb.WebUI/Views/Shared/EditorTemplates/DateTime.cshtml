@model System.DateTime?

<div class="editor-field">
    @Html.TextBox("", String.Format("{0:yyyy/MM/dd}", (Model == DateTime.MinValue) ? null : Model), new { @class = "datepicker" })
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#@ViewData.ModelMetadata.PropertyName").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'yyyy/MM/dd',
            format: 'yyyy/MM/dd',
            autoclose: true
        });
    });
</script>