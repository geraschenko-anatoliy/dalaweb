@model DalaWeb.Domain.Entities.Counters.Counter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table>
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Abonent.Name)
            </div>
        </td>
        <td>

            <div class="display-field">
                @Html.DisplayFor(model => model.Abonent.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Service.Name)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.Service.Name)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.StartDate)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.StartDate)
            </div>
        </td>
    </tr>
    @if (Model.Stamps == null)
    {
        <tr>
            <td>
                Пломбы
            </td>
            <td>
                <span class="label label-warning">Нет в базе</span>
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                <div class="display-label">
                    Пломбы
                </div>
            </td>
            <td>
                <div class="display-field">
                    <table>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FinishDate)
                            </th>
                        </tr>
                        @foreach (var item in Model.Stamps.OrderBy(x => x.isOff))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.StartDate)
                                </td>
                                <td>
                                    @if (item.FinishDate == DateTime.MinValue)
                                    {
                                        <span class="label label-success">Активная</span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => item.FinishDate)
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </td>

        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CounterId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
