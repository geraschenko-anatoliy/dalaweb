@model DalaWeb.Domain.Entities.Counters.Counter

@{
    ViewBag.Title = "Счетчики";
}

<h2>Создание счетчика для абонента @ViewBag.AbonentName</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Счетчик</legend>

        @Html.Hidden("isOff", false)
        @Html.Hidden("AbonentId", (int)ViewBag.AbonentId)
        @Html.Hidden("ServiceId", (int)ViewBag.ServiceId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InitialValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InitialValue)
            @Html.ValidationMessageFor(model => model.InitialValue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>
