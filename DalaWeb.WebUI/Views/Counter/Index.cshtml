@model IEnumerable<DalaWeb.Domain.Entities.Counters.Counter>

@{
    ViewBag.Title = "Главная";
}

<h2>Счетчики</h2>

@Html.ActionLink("К отключенным", "Archive")

@if (Model.Any())
{ 
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonent.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abonent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Функции
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="@Url.Action("Edit", new { id = item.CounterId })">Редактировать</a></li>
                        <li><a href="@Url.Action("Details", new { id = item.CounterId })">Детальнее</a></li>
                        <li><a href="@Url.Action("Delete", new { id = item.CounterId })">Отключить</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </table>
}
else
{
    <p>
        Список счетчиков пуст
    </p>
}