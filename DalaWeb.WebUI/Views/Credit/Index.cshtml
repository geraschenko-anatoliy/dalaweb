@model IEnumerable<DalaWeb.Domain.Entities.Credits.Credit>

@{
    ViewBag.Title = "Кредиты. Главная";
}

<h2>
    Кредиты
    <a class="btn" title="Создать" href="@Url.Action("Create")">
        <span class="icon-plus"></span>
    </a>
</h2>

@if (Model.Any())
{ 
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn" title="Редактировать" href="@Url.Action("Edit", new { id = item.CreditId })">
                        <span class="icon-edit"></span>
                    </a>
                    <a class="btn" title="Детальнее" href="@Url.Action("Details", new { id = item.CreditId })">
                        <span class="icon-info-sign"></span>
                    </a>
                    <a class="btn" title="Удалить" href="@Url.Action("Delete", new { id = item.CreditId })">
                        <span class="icon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-center">
        Список кредитов пуст
    </p>
}